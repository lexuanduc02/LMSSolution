@using LMSSolution.ViewModels.Course
@model CourseDeleteRequest
@{
    ViewData["Title"] = "Xóa khóa học";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <i class="dripicons-warning h1 text-warning"></i>
                    <h4 class="mt-2">Xác nhận xóa</h4>
                    <p class="mt-3">Bạn có chắc chắn muốn xóa khóa <span class="text-danger">@Model.Name</span></p>
                </div>
                <form asp-action="Delete" asp-controller="Course" method="post">
                    <div class="row justify-content-center">
                        <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
                        <button type="submit" class="btn btn-warning my-2 ">Đồng ý</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
