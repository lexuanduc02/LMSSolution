@using LMSSolution.ViewModels.Auth
@model LoginRequest
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Central Authentication Service</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description">
    <meta content="Coderthemes" name="author">

    <!-- App favicon -->
    <link rel="shortcut icon" href="/images/favicon_hou.ico">

    <!-- App css -->
    <link href="/css/icons.min.css" rel="stylesheet" type="text/css">
    <link href="/css/app-creative.min.css" rel="stylesheet" type="text/css" id="light-style">
</head>
<body class="authentication-bg" data-layout-config="{&quot;darkMode&quot;:false}">
    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card">
                        <!-- Logo -->
                        <div class="card-header text-center">
                            <a href="https://hou.edu.vn/" target="_blank">
                                <span><img src="/images/login-logo.png" alt=""></span>
                            </a>
                        </div>
                        <div class="card-body p-4">
                            <div class="text-center w-75 m-auto">
                                <h4 class="text-dark-50 text-center mt-0 font-weight-bold">Central Authentication Service</h4>
                                <p class="text-muted mb-3">Nhập địa chỉ Email và mật khẩu của bạn để truy cập.</p>
                            </div>
                            <form asp-action="Login" asp-controller="Auth">
                                <input type="hidden" asp-for="ReturnUrl" value="@(Context.Request.Query["ReturnUrl"])">
                                <div class="form-group">
                                    <label asp-for="Email">Email : </label>
                                    <input type="text" class="form-control" asp-for="Email" placeholder="Điền Email">
                                    <div class="mt-1"><span asp-validation-for="Email" class="text-danger"></span></div>
                                </div>
                                <div class="form-group">
                                    <a href="pages-recoverpw.html" class="text-muted float-right"><small>Bạn quên mật khâir?</small></a>
                                    <label asp-for="Password">Mật khẩu : </label>
                                    <div class="input-group input-group-merge">
                                        <input type="password" asp-for="Password" class="form-control" placeholder="Điền mật khẩu">
                                        <div class="input-group-append" data-password="false">
                                            <div class="input-group-text">
                                                <span class="password-eye"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mt-1"><span asp-validation-for="Password" class="text-danger"></span></div>
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-center text-danger w-75 ml-3"></div>
                                <div class="form-group mb-3">
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" asp-for="RememberMe">
                                        <label class="custom-control-label" asp-for="RememberMe">Ghi nhớ đăng nhập</label>
                                    </div>
                                </div>
                                <div class="form-group mb-0 text-center">
                                    <button class="btn btn-primary" type="submit"> Đăng nhập </button>
                                </div>
                            </form>
                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->
    <footer class="footer footer-alt">
        <h5>HOU LMS - HOU Learning Management System</h5>
    </footer>
    <!-- bundle -->
    <script src="/js/vendor.min.js"></script>
    <script src="/js/app.min.js"></script>
</body>
</html>